! Xresource file

!dzen2.font: -*-lemon-*-r-normal-*-*-100-*-*-*-*-*-*
!dzen2.font: -*-droidsans-*-r-normal-*-*-100-*-*-*-*-*-*
!dzen2.foreground: #d6d7d9
!dzen2.background: #222326

!URxvt*depth: 50 --24
URxvt*geometry: 100x25
!111113
xURxvt.borderColor: #000219
URxvt.internalBorder: 8 
URxvt.cursorUnderline: false
URxvt.cursorBlink: true

URxvt*iconFile: /usr/share/icons/Flattr/apps/scalable/bash.svg
!--Get solarized colors right
!
URxvt.intensityStyles: false
!URxvt*.transparent: true
!URxvt*.shading: 5
!URxvt*.blurRadius: 20


! -- scrollbar
URxvt.scrollstyle: plain
URxvt.scrollBar: false
URxvt*scrollTtyOuput: false
URxvt*scrollWidthBuffer: true
URxvt*scrollTtyKeypress: true

! -- login shell
URxvt*loginShell: false

! -- font
URxvt.font: xft:hack:pixelsize=15
!URxvt.font: xft:Terminus-powerline:pixelsize=18
!URxvt.font: xft:Terminus:pixelsize=18
!URxvt.font: xft:Droid Sans Mono:size=10
!URxvt.font: xft:Ubuntu Mono:size=10
!URxvt.font: xft:PragmataPro:size=10
!URxvt.font: xft:Inconsolata:size=10
!URxvt.font: xft:Liberation Mono:size=10
!URxvt.font: xft:berry:pixelsize=12
!URxvt.font: xft:tewi-8
!URxvt.font: xft:terminus:size=8
!URxvt.font: xft:tamsyn:size=8
!URxvt.font: xft:cure-8
URxvt.boldFont:
URxvt*letterSpace: -2
!URxvt*lineSpace: 2

! -- perl
URxvt.perl-ext-common: default,matcher
!URxvt.keysym.Mod4-v: perl:clipboard:paste
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.colorUL: #9472ec
